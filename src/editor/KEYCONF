addkeysection "Cameraman" CameramanKeysection

alias _menu "openmenu OptionsMenu"
alias _usecursor "pukename _UseCursor"
alias _movecursorforward "pukename _MoveCursorForward"
alias _movecursorback "pukename _MoveCursorBack"
alias _switchdrawingmode "pukename _SwitchDrawingMode"
alias _togglecursorlock "pukename _ToggleCursorLock"
alias _play "closemenu; pukename _PlayInEditor"
alias _refresh "closemenu; pukename _RefreshEditor"
alias _export "closemenu; pukename _Export"
alias _warp "closemenu; pukename _WarpToPath"

addmenukey "Open menu" _menu
addmenukey "Use cursor" _usecursor
addmenukey "Move cursor forward" _movecursorforward
addmenukey "Move cursor back" _movecursorback
addmenukey "Switch drawing mode" _switchdrawingmode
addmenukey "Toggle cursor lock" _togglecursorlock
addmenukey "Play" _play